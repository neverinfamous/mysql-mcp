  "repository": {
    "type": "git",
    "url": "git+https://github.com/neverinfamous/mysql-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/neverinfamous/mysql-mcp/issues"
  },
  "homepage": "https://github.com/neverinfamous/mysql-mcp#readme",
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "jose": "^6.1.3",
    "mysql2": "^3.16.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.2.2",
