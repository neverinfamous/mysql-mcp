        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "check": "npm run lint && npm run typecheck"
    },
    "keywords": [
        "mcp",
        "mysql",
        "database",
        "model-context-protocol",
        "ai",
        "llm",
        "claude",
        "cursor",
