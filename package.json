    "author": "Adamic.tech",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/neverinfamous/mysql-mcp.git"
    },
    "bugs": {
        "url": "https://github.com/neverinfamous/mysql-mcp/issues"
    },
    "homepage": "https://github.com/neverinfamous/mysql-mcp#readme",
    "engines": {
        "node": ">=24.0.0"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.25.2",
        "commander": "^14.0.2",
        "cors": "^2.8.5",
        "jose": "^6.1.3",
        "mysql2": "^3.16.0",
        "zod": "^4.3.5"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/cors": "^2.8.19",
        "@types/node": "^25.0.8",
        "@vitest/coverage-v8": "^4.0.17",
        "eslint": "^9.39.2",
        "globals": "^17.0.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.53.0",
        "vitest": "^4.0.17"
    }
